#include <stdio.h>
#include <stdlib.h>
int main()
{
	system("chcp 1251");
	system("cls");
	int M, N, i, j, A[20][20];
	printf("Введите размер матрицы\n");
	scanf_s("%d %d", &M, &N);
	printf("Введите элементы матрицы\n");
	for (i = 1; i <= M; i++) {
		for (j = 1; j <= N; j++) {
			scanf_s("%d", &A[i][j]);
		}
	}
	printf("\n");
	int m2 = M, i2, temp;
	for (i = 1; i < M; i++) {
		i2 = 1;
		m2--;
		while (i2 <= m2) {
			if (A[i2][1] > A[i2 + 1][1]) {
				for (j = 1; j <= N; j++) {
					temp = A[i2][j];
					A[i2][j] = A[i2 + 1][j];
					A[i2 + 1][j] = temp;
				}
			}
			i2++;
		}
	}
	for (i = 1; i <= M; i++) {
		for (j = 1; j <= N; j++) {
			printf("%d ", A[i][j]);
		}
		printf("\n");
	}
	return 0;
}
