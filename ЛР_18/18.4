#include <stdio.h>
#include <stdlib.h>
int main()
{
	system("chcp 1251");
	system("cls");
	int N, i;
	printf("Введите размер массива\n");
	scanf_s("%d", &N);
	int* A = new int[N];
	printf("Введите элементы массива A\n");
	for (i = 0; i < N; i++) {
		scanf_s("%d", &A[i]);
	}
	int max_i, min_i;
	int min = A[0];
	int max = A[0];
	for (i = 0; i < N; i++) {
		if (A[i] <= min) {
			min = A[i];
			min_i = i;
		}
		if (A[i] >= max) {
			max = A[i];
			max_i = i;
		}
	}
	if (min_i < max_i) {
		for (i = min_i + 1; i < max_i; i++) {
			A[i] = 0;
		}
	} else
		for (i = max_i + 1; i < min_i; i++) {
			A[i] = 0;
		}
	for (i = 0; i < N; i++) {
		printf("%d ", A[i]);
	}
	return 0;
}
