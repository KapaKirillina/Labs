#include <stdio.h>
#include <stdlib.h>
int main()
{
	system("chcp 1251");
	system("cls");
	int N, i, j;
	printf("Введите размер массива\n");
	scanf_s("%d", &N);
	int* A = new int[N];
	int* B = new int[N + 2];
	printf("Введите элементы массива A\n");
	for (i = 0; i < N; i++) {
		scanf_s("%d", &A[i]);
	}
	int min = A[0], max = A[0];
	int min_i = 0, max_i = 0;
	for (i = 0; i < N; i++) {
		if (A[i] < min) {
			min_i = i;
			min = A[i];
		}
		if (A[i] > max) {
			max_i = i;
			max = A[i];
		}
	}
	for (i = 0, j = 0; i < N; i++, j++) {
		B[j] = A[i];
		if (i == min_i) {
			B[j + 1] = B[j];
			B[j] = 0;
			j++;
		}
		if (i == max_i) {
			B[j + 1] = 0;
			B[j] = A[i];
			j++;
		}
	}
	for (j = 0; j < N + 2; j++) {
		printf("%d ", B[j]);
	}
	return 0;
}
