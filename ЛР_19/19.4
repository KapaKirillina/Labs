#include <stdio.h>
#include <stdlib.h>
int main()
{
	system("chcp 1251");
	system("cls");
	int N, i, j;
	printf("Введите размер массива\n");
	scanf_s("%d", &N);
	int* A = new int[N];
	printf("Введите элементы массива A\n");
	for (i = 0; i < N; i++) {
		scanf_s("%d", &A[i]);
	}
	int kol = 0;
	for (i = 0; i < N; i++) {
		if (A[i] < 0) {
			kol++;
		}
	}
	int size = N + kol;
	int* B = new int[size];
	for (i = 0, j = 0; i < N; i++, j++) {
		B[j] = A[i];
		if (A[i] < 0) {
			B[j] = A[i];
			B[j + 1] = 0;
			j++;
		}
	}
	for (j = 0; j < size; j++) {
		printf("%d ", B[j]);
	}
	return 0;
}
