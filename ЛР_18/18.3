#include <stdio.h>
#include <stdlib.h>
int main()
{
	system("chcp 1251");
	system("cls");
	int N, i;
	printf("Введите размер массива\n");
	scanf_s("%d", &N);
	int* A = new int[N];
	printf("Введите элементы массива A\n");
	for (i = 0; i < N; i++) {
		scanf_s("%d", &A[i]);
	}
	int odd = 0;
	for (i = 0; i < N; i++) {
		if (A[i] % 2 > 0) {
			odd = A[i];
		}
	}
	for (i = 0; i < N; i++) {
		if (A[i] % 2 > 0) {
			A[i] += odd;
		}
	}
	for (i = 0; i < N; i++) {
		printf("%d ", A[i]);
	}
	return 0;
}
