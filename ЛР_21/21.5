#include <stdio.h>
#include <stdlib.h>
int main()
{
	system("chcp 1251");
	system("cls");
	int M, N, i, j;
	int A[20][20];
	printf("Введите размер матрицы (M на N)\n");
	scanf_s("%d %d", &M, &N);
	printf("Введите элементы матрицы\n");
	for (i = 1; i <= M; i++) {
		for (j = 1; j <= N; j++) {
			scanf_s("%d", &A[i][j]);
		}
	}
	int kol, num = 0;
	for (j = 1; j <= N; j++) {
		kol = 0;
		for (i = 1; i <= M; i++) {
			if (A[i][j] % 2 != 0) {
				kol++;
			}
		}
		if (kol == M) {
			printf("%d", j);
			break;
		}
		num++;
	}
	if (num == N)
		printf("0");
	return 0;
}
